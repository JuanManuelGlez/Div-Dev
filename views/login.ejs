<%- include('includes/header.ejs') %>
<body style="padding: 0px;">
    <div class="row" style="height: 100vh;">
        <div class="col"><img style="width: 100%;height: 100%;" src="/img/zeb%20back.png"></div>
        <div style = "margin-top:70px" class="col">
            <div class="d-flex flex-column justify-content-center" id="login-box" style="margin-top: 100px;">
                <div class="login-box-header">
                    <h4 style="color: rgb(0,0,0);margin-bottom: 0px;font-weight: 400;font-size: 27px;">Iniciar Sesión</h4>
                </div>
                <form id="form_login" method="POST">
                    <input type="hidden" id="_csrf" name="_csrf" value="<%= csrfToken %>">
                    
                    <div class="email-login" style="background-color:#ffffff;">
                        <input id="correo" name="correo" type="email" class="email-imput form-control" style="margin-top:10px;" required="" placeholder="Correo" minlength="6">
                        <input id="contrasenia" name="contrasenia" type="password" class="password-input form-control" style="margin-top:10px;" required="" placeholder="Contraseña" minlength="6">
                    </div>

                    <div id="mensaje_error"></div>
                    <div class="submit-row" style="margin-bottom:8px;padding-top:0px;"><input type="button" id="credencial" class="btn btn-primary mt-3" style="background-color: black;" value="Enviar">
                       
                    </div>
                    <div id="login-box-footer" style="padding:10px 20px;padding-bottom:23px;padding-top:18px;">
                        <p style="margin-bottom:0px;">¿Aún no tienes una cuenta?<a id="register-link" href="/usuario/signup">Registrate</a></p>
                    </div>
                </form>
            </div>
        </div>

        <script src="/js/script_credenciales_erroneas.js"></script>
<%- include('includes/foot.ejs') %>
<%- include('includes/header.ejs') %>
    <%- include('includes/sidebar.ejs') %>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Visibilidad</th>
                </tr>
            </thead>
            <tbody>
                <% for(let privilegio of privilegios) { %>
                    <tr>
                        <td>
                            <%= privilegio.Id_Privilegio %>
                        </td>
                        <td>
                            <%= privilegio.Nombre_Privilegio %>
                        </td>
                        <td>
                            <% if(privilegio.Visibilidad_Privilegio[0]==1){%>
                            TRUE
                            <% } else {%>
                            FALSE
                            <% } %>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>

        <form method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="row" style="padding: 15px 0px;">
                <div class="col-xxl-4"><label class="col-form-label text-dark">Nombre Nuevo Privilegio:</label></div>
                <div class="col"><input id="Nuevo_Nombre" name="Nuevo_Nombre" class="form-control" type="text"></div>
                <div class="col"><button id="agrega_privilegio" type="submit" class="btn btn-success"> Agregar </button></div>
        </form>

        <%- include('includes/foot.ejs') %>
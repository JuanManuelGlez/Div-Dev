<%- include('includes/header.ejs') %>
  <%- include('includes/sidebar.ejs') %>
    <div class="page-content-wrapper" style="color: var(--bs-teal);">
      <div class="container-fluid" style="color: transparent;background: var(--bs-indigo);">
        <div class="row" style="background: var(--bs-red);">
          <div class="col-md-12 offset-2 offset-sm-1 offset-md-0 offset-xxl-0"
            style="color: var(--bs-purple);background: #ff595a;">
            <div></div>
            <h1 style="color: #ffffff;margin-left:15px;">Panel Administrativo</h1>
          </div>
        </div>
      </div>
      <div class="container" style="margin-top: 30px;">


        <style>
          .content {
            padding: 0 18px;
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.2s ease-out;
            background-color: white;
          }
        </style>

        <form id="forma_csrf" method="POST">
          <input type="hidden" id="_csrf" name="_csrf" value="<%= csrfToken %>">
        </form>

        <div class="accordion" id="accordionExample">
          <div style="display:none" class="accordion-item"></div>

          <div class="accordion-item">

            <button id="abreLabels" class="collapsible accordion-button"
              style="width:100%;background-color: white;color:black" data-bs-toggle="collapse"
              data-bs-target="#collapseTwo"> Labels </button>

            <div id="collapseTwo" style="background-color: white;"
              class="content accordion-collapse collapse overflow-auto" aria-labelledby="headingOne">
              <div class="accordion-body" id="contenido_labels">
              </div>
            </div>
          </div>

          <br>

          <div class="accordion-item">

            <button id="abreEstados" class="collapsible accordion-button"
              style="width:100%;background-color: white;color:black" data-bs-toggle="collapse"
              data-bs-target="#collapseThree"> Estados </button>

            <div id="collapseThree" style="background-color: white;"
              class="collapse accordion-collapse content overflow-auto" aria-labelledby="headingOne">
              <div class="accordion-body" id="contenido_estados">
              </div>
            </div>


          </div>



          <br>
          <div class="accordion-item">

            <button id="abreProcedencia" class="collapsible accordion-button"
              style="width:100%;background-color: white;color:black" data-bs-toggle="collapse"
              data-bs-target="#collapseFour"> Procedencias </button>
            <div id="collapseFour" class="collapse accordion-collapse content overflow-auto"
              aria-labelledby="headingOne">
              <div class="accordion-body" id="contenido_procedencia">
              </div>
            </div>

          </div>

          <br>

          <div class="accordion-item">

            <button id="abrePreguntas" class="collapsible accordion-button"
              style="width:100%;background-color: white;color:black" data-bs-toggle="collapse"
              data-bs-target="#collapseFive"> Preguntas </button>

            <div id="collapseFive" style="background-color: white;"
              class="content accordion-collapse collapse overflow-auto" aria-labelledby="headingOne">
              <div class="accordion-body" id="contenido_preguntas">
              </div>
            </div>
          </div>

          <script>
            var coll = document.getElementsByClassName("collapsible");
            var i;

            for (i = 0; i < coll.length; i++) {
              coll[i].addEventListener("click", function () {
                this.classList.toggle("active");
                var content = this.nextElementSibling;
                if (content.style.maxHeight) {
                  content.style.maxHeight = null;
                } else {
                  content.style.maxHeight = content.scrollHeight + "px";
                }
              });
            }
          </script>
          <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
          <script src="/js/script_modificar_procedencia.js"></script>
          <script src="/js/script_panel_admin.js"></script>


        </div>
      </div>
      <%- include('includes/foot.ejs') %>
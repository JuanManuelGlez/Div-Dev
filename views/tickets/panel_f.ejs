<%- include('../includes/head.ejs') %>
<div class="container">
    <div class="row">
        <div class="col-sm" id="Sin_Asignar">
            <h2>Sin Asignar/No Iniciado:</h2>
                <%for (let ticket of tickets){%>
                    <%if (ticket.Id_Estado == 6 || ticket.Id_Estado == 3){%>
                    <div>
                        ID: <%=ticket.Id_Ticket%> <br>
                        Asunto: <%=ticket.Asunto%><br>
                        Prioridad: <%=ticket.Id_Prioridad%><br>
                        <%=(ticket.Fecha_Inicio.toString()).substring(4,21) %>
                    </div><br>
                    <%}%>
                <%}%>
        </div>
            <div class="col-sm" id="Progreso">
                <h2>PROGRESO:</h2>
                <%for (let ticket of tickets){%>
                    <%if (ticket.Id_Estado == 2){%>
                    <div>
                        ID: <%=ticket.Id_Ticket%> <br>
                        Asunto: <%=ticket.Asunto%><br>
                        Prioridad: <%=ticket.Id_Prioridad%><br>
                        <%=(ticket.Fecha_Inicio.toString()).substring(4,21) %>
                    </div><br>
                    <%}%>
                <%}%>
            </div>
            <div class="col-sm" id="Completo">
                <h2>Completo:</h2>
                <%for (let ticket of tickets){%>
                    <%if (ticket.Id_Estado == 1){%>
                    <div>
                        ID: <%=ticket.Id_Ticket%> <br>
                        Asunto: <%=ticket.Asunto%><br>
                        Prioridad: <%=ticket.Id_Prioridad%><br>
                        <%=(ticket.Fecha_Inicio.toString()).substring(4,21) %>
                    </div><br>
                    <%}%>
                <%}%>
            </div> <br>
    </div>
</div>

<script defer src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta2/dist/js/bootstrap-select.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<%- include('../include/head.ejs') %>

    <div class="container">
      <div class="row justify-content-center">
        <form id="form_nuevo_ticket" method="POST">
          <select required class="form-select" id="select_tipo_incidencia" name="tipo_incidencia" aria-label="Default select example">
            <option selected disabled>Elige el tipo de incidencia</option>
            <% for(let tipo_incidencia of tipos_incidencia) {%>
              <option value="<%= tipo_incidencia.Id_Tipo_Incidencia %>"><%= tipo_incidencia.Nombre_Tipo_Incidencia %></option>
            <% }%>
          </select>
          <div id="campos_ticket" style="display: none">
            <label for="asunto">Asunto: </label>
            <input type="text" id="asunto" name="asunto" placeholder="assdasdadsqd">
            <label for="descripcion">Descripci√≥n: </label>
            <input type="text" id="descripcion" name="descripcion">
            <select class="form-select" id="select_prioridad" name="prioridad" aria-label="Default select example">
                <option selected>Prioridad de la incidencia:</option>
                <% for(let prioridad of prioridades) {%>
                  <option value="<%= prioridad.Id_Prioridad %>"><%= prioridad.Nombre_Prioridad %></option>
                <% }%>
            </select>
            <select class="form-select" id="select_procedencia" name="prosedencia" aria-label="Default select example">
                <option selected>Procedencia:</option>
                <% for(let procedencia of procedencias) {%>
                  <option value="<%= procedencia.Id_Procedencia %>"><%= procedencia.Nombre_Procedencia %></option>
                <% }%>
            </select>
            <select class="form-select" id="select_labels" name="labels" aria-label="Default select example">
                <option selected>Labels:</option>
                <% for(let label of labels) {%>
                  <option value="<%= label.Id_Label %>"><%= label.Id_Label %></option>
                <% }%>
            </select>
          </div>
          <div id="preguntas_ticket"></div>

          <button type="submit" class="btn btn-primary mt-3" id="enviar">Submit</button>
        </form>
      </div>
    </div>

    <script src="/js/script_nuevo_ticket.js"></script>
<%- include('../include/foot.ejs') %>
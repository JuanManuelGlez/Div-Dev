<%- include('includes/head.ejs') %>

<div class="container">
    <div class="row justify-content-center">
        <form id="form_asignar_pregunta" method="POST">
            <br><div id="show_preguntas">
                Nueva Pregunta: <input type="text" name="pregunta" id="input_pregunta">
                <i class="large material-icons">add</i>
                <br>
                <select class="form-select-pregunta" multiple data-live-search="true" id="select_preguntas" name="preguntas" aria-label="Default select example">
                    <option selected disabled>Preguntas:</option>
                    <% for(let pregunta of preguntas) {%>
                        <option value="<%= pregunta.Id_Pregunta %>"><%= pregunta.Id_Pregunta %></option>
                    <% } %>
                </select><br>
            </div>
        </form>
    </div>
</div>

<script defer src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta2/dist/js/bootstrap-select.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('.form-select-pregunta').selectpicker();
    });
</script>

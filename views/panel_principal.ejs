<%- include('includes/header.ejs') %>
<%- include('includes/sidebar.ejs') %>

<div id="Ticket" style="display: none;justify-content: center;width:1000px;height:700px;overflow-y: scroll;margin:80px auto">
    <!-- <div class="row" style="box-shadow: 0px 0px 20px;width: 1200px;height: 1000px;margin-left: 400px;"> -->
      <div class="col" style="width: 1000px;">
          <div class="card">
            <%for (let ticket of tickets){ %>
              <div class="card-body">
                  <div class="row">
                      <div class="col-xxl-9">
                          <h1>Asunto: <%=ticket.Asunto %></h1>
                      </div>
                      <div class="col" style="text-align: right;">
                          <h2>Ticket <%=ticket.Id_Ticket %></h2>
                      </div>
                  </div>
                  <div class="row" style="padding-bottom: 30px;padding-top: 30px;">
                      <div class="col-xxl-2">
                          <h4>Tipo de incidencia</h4>
                      </div>
                      <div class="col" style="text-align: right;">
                        <%=ticket.Nombre_Tipo_Incidencia %>
                      </div>
                  </div>
                  <div class="row" style="padding-bottom: 30px;padding-top: 10px;">
                      <div class="col-xxl-3">
                          <div class="dropdown"><button class="btn btn-primary dropdown-toggle" aria-expanded="false" data-bs-toggle="dropdown" type="button" style="width: 100%;background: rgb(176,176,176);border-width: 0px;border-right-width: 0px;">Dropdown </button>
                              <div class="dropdown-menu"><a class="dropdown-item" href="#">First Item</a><a class="dropdown-item" href="#">Second Item</a><a class="dropdown-item" href="#">Third Item</a></div>
                          </div>
                      </div>
                      <div class="col">
                          <h4 style="text-align: right;">Estado</h4>
                      </div>
                      <div class="col">
                          <div class="dropdown"><button class="btn btn-primary dropdown-toggle" aria-expanded="false" data-bs-toggle="dropdown" type="button" style="width: 100%;background: #efb22d;border-width: 0px;border-right-width: 0px;">En progreso</button>
                              <div class="dropdown-menu"><a class="dropdown-item" href="#">First Item</a><a class="dropdown-item" href="#">Second Item</a><a class="dropdown-item" href="#">Third Item</a></div>
                          </div>
                      </div>
                      <div class="col" style="text-align: right;">
                          <h4 style="text-align: right;">Prioridad</h4>
                      </div>
                      <div class="col" style="text-align: right;width: 100%;">
                          <div class="dropdown"><button class="btn btn-primary dropdown-toggle" aria-expanded="false" data-bs-toggle="dropdown" type="button" style="width: 100%;background: var(--bs-red);border-width: 0px;border-right-width: 0px;">Urgente</button>
                              <div class="dropdown-menu"><a class="dropdown-item" href="#">First Item</a><a class="dropdown-item" href="#">Second Item</a><a class="dropdown-item" href="#">Third Item</a></div>
                          </div>
                      </div>
                  </div>
                  <div class="row">
                      <div class="col">
                          <h4>Descripción</h4>
                      </div>
                  </div>
                  <div class="row">
                      <div class="col" style="border-right-width: 0px;border-right-style: solid;margin: 10px;box-shadow: 0px 0px 7px rgb(183,183,183);">
                          <p class="border-primary" style="border-radius: 18px;padding: 10px;border-right: 0px solid rgb(0,0,0);"><%=ticket.Descripcion %><br><br><br></p>
                      </div>
                  </div>
                  <div class="row">
                      <div class="col">
                          <h4 class="text-dark mb-2">Información Extra</h4>
                          <div class="row">
                              <div class="col" style="border-right-width: 0px;border-right-style: solid;margin: 0px;padding: 0px;margin-left: 30px;">
                                  <form>
                                      <div class="row">
                                          <div class="col">
                                            <%for (let pregunta of preguntas){%>
                                                <div class="row">
                                                  <div class="col"><label class="col-form-label"><%=pregunta.Pregunta%> </label></div>
                                              </div>
                                              <div class="row">
                                                  <div class="col"><%=pregunta.Respuesta%></div>
                                              </div>
                
                                              <%}%>
                                              
                                              
                                          </div>
                                      </div>
                                  </form>
                              </div>
                          </div>
                      </div>
                  </div>
                  <div class="row">
                      <div class="col-xxl-5"><img class="rounded-circle" style="width: 80px;height: 80px;" src="assets/img/WhatsApp%20Image%202021-12-02%20at%206.30.57%20AM.jpeg"></div>
                      <div class="col"><button class="btn btn-primary" type="button" style="background: rgb(0,0,0);width: 100%;margin-top: 40px;">Actualizar<i class="fa fa-refresh" style="margin-left: 15px;"></i></button></div>
                      <div class="col"><button class="btn btn-primary" type="button" style="background: rgb(0,0,0);width: 100%;margin-top: 40px;">Comentarios<i class="fa fa-comments-o" style="margin-left: 15px;"></i></button></div>
                      <div class="col"><button class="btn btn-primary" type="button" style="background: rgb(0,0,0);width: 100%;margin-top: 40px;">Asignación<i class="fa fa-user-plus" style="margin-left: 15px;"></i></button></div>
                  </div>
              </div>
            <%}%>
          </div>
      </div>
  </div>

<div class="page-content-wrapper" style="color: var(--bs-teal);">
    <div class="container-fluid" style="color: transparent;background: var(--bs-indigo);">
        <div class="row" style="background: var(--bs-red);">
            <div class="col-sm-12 offset-2 offset-sm-1 offset-md-0 offset-lg-0 offset-xl-0 offset-xxl-0" style="color: var(--bs-purple);background: #FF595A;">
                <div></div>
                <h1 style="color: var(--bs-body-bg);margin-left: 50px;">Panel Tickets</h1>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row" style="margin-top: 30px;">
            

                <% for(let ticket of tickets) {%>
    
                    <div class="col">
                        <div class="card" style="overflow: hidden;margin-top:10px;margin-bottom:10px;box-shadow: 1px 4px 8px rgba(0,0,0,0.46);">
                            <div class="card-body" style="text-align: left;width: 262px;overflow: hidden;">
                                <h4 class="card-title" style="overflow: hidden;color: rgb(0,0,0);text-align: left;">Ticket <%= ticket.Id_Ticket %></h4>
                                <h6 class="text-muted card-subtitle mb-2" style="overflow: hidden;color: rgb(0,0,0);"><%= ticket.Asunto %></h6><i class="fa fa-circle" style="overflow: hidden;color: rgb(159,159,159);"></i><span style="overflow: hidden;margin-left: 10px;color: rgb(136,136,136);">Creado el <%= ticket.Fecha_Inicio %></span><img class="rounded-circle" style="width: 35px;height: 35px;margin-left: 15px;" src="/img/WhatsApp%20Image%202021-12-02%20at%206.30.57%20AM.jpeg">
                                <button onClick="openTicket()"> show </button>
                            </div>
                        </div>
                    </div>
         
                <% }%>


  
        </div>
    </div>
</div>

<style>
    ::-webkit-scrollbar {
    width: 0px;
    background: transparent; /* make scrollbar transparent */}


    #Ticket{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 9999;
  padding: 10px;
  text-align: center;
  display: none;
    }
</style>


<script src="/js/script_popup_ticket.js"></script>
<%- include('includes/foot.ejs') %>
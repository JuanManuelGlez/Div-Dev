<%- include('includes/header.ejs') %>
<body style="padding: 0px;">
    <div class="row" style="height: 100vh;">
        <div class="col"><img style="width: 100%;height: 100%;" src="/img/zeb%20back.png"></div>
        <div style="margin-top:70px" class="col">
            <div class="d-flex flex-column justify-content-center" id="login-box" style="margin-top: 100px;">
                <div class="login-box-header">
                    <h4 style="color: rgb(0,0,0);margin-bottom: 0px;font-weight: 400;font-size: 27px;"> Registrar nueva cuenta </h4>
                </div>
                <form id="form_signup" method="POST">
                    
                    
                    <div class="email-login" style="background-color:#ffffff;">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
             
            
                        <input type="text" id="nombre" name="nombre" class="email-imput form-control" style="margin-top:10px;" required="" placeholder="Nombre" minlength="6" maxlength="70">
                        <input type="email" id="correo" name="correo" id="contrasenia" class="email-imput form-control" style="margin-top:10px;" required="" placeholder="Correo" minlength="6" maxlength="50" pattern=".*\@zeb\.mx$">
                        <input type="password" id="contrasenia" name="contrasenia" class="password-input form-control" style="margin-top: 10px;margin-bottom: 15px;" required="" placeholder="Contraseña" minlength="6" maxlength="30"> 
                        <div style="text-align: center;color:green" id="mensaje_exito"></div>
                        <div class="submit-row" style="margin-bottom:8px;padding-top:0px;"><button type="submit" onClick = "mensaje()" class="btn btn-primary mt-3" style="border-width:0px;background-color: black;" id="enviar"> Registrate </button>
                    </div>
                    <div id="login-box-footer" style="padding:10px 20px;padding-bottom:23px;padding-top:18px;">
                        <p style="margin-bottom:0px;">¿Ya tienes una cuenta?<a id="register-link" href="/usuario/login">Inicia Sesión</a></p>
                    </div>
                </form>
               <script>
                   function mensaje(){
                       document.getElementById("mensaje_exito").innerHTML = "revisa tu correo para verificar tu cuenta"
                   }
               </script>
                
                <div id="login-box-footer" style="padding:10px 20px;padding-bottom:23px;padding-top:18px;"></div>
            </div>
    


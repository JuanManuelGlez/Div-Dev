    <div class="row" style="height: 100vh;">
        <div class="col"><img style="width: 100%;height: 100%;" src="/img/zeb%20back.png"></div>
        <div class="col">
            <div class="d-flex flex-column justify-content-center" id="login-box" style="margin-top: 100px;">
                <div class="login-box-header">
                    <h4 style="color: rgb(0,0,0);margin-bottom: 0px;font-weight: 400;font-size: 27px;">Sign Up</h4>
                </div>
                <form id="form_signup" method="POST">
                    
                    <div class="login-box-content">
                        <div class="fb-login box-shadow"></div>
                        <div class="gp-login box-shadow"><a class="d-flex flex-row align-items-center social-login-link" style="margin-bottom:10px;" href="#"><i class="fa fa-google" style="color:rgb(255,255,255);width:56px;"></i>Sign up with Google+</a></div>
                    </div>
                    <div class="d-flex flex-row align-items-center login-box-seperator-container">
                        <div class="login-box-seperator"></div>
                        <div class="login-box-seperator-text">
                            <p style="margin-bottom:0px;padding-left:10px;padding-right:10px;font-weight:400;color:rgb(201,201,201);">or</p>
                        </div>
                        <div class="login-box-seperator"></div>
                    </div>
                    <div class="email-login" style="background-color:#ffffff;">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
             
            
                        <input type="text" id="nombre" name="nombre" class="email-imput form-control" style="margin-top:10px;" required="" placeholder="Nombre" minlength="6" maxlength="70">
                        <input type="email" id="correo" name="correo" id="contrasenia" class="email-imput form-control" style="margin-top:10px;" required="" placeholder="Email" minlength="6" maxlength="50" pattern="/.*\@zeb.mx$/">
                        <input type="password" id="contrasenia" name="contrasenia" class="password-input form-control" style="margin-top: 10px;margin-bottom: 15px;" required="" placeholder="Contraseña" minlength="6" maxlength="30"> 
                        <div class="form-check form-check-inline" id="form-check-rememberMe"><input class="form-check-input" type="checkbox" id="formCheck-1" for="remember" style="cursor:pointer;" name="check"><label class="form-check-label" for="formCheck-1"><span class="label-text">Acepto todos los términos y condiciones</span></label></div><a href="#" style="text-align: left;">Ver términos y condiciones</a>
                    </div>
                    
                    <div class="submit-row" style="margin-bottom:8px;padding-top:0px;"><button type="submit" class="btn btn-primary mt-3" style="border-width:0px;background-color: black;" id="enviar">Sign Up</button>
                        <div class="d-flex justify-content-between"></div>
                    </div>
                </form>
